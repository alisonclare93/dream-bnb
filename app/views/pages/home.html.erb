<div>
  <%= render 'shared/banner' %>
</div>

<div class="container">
<h2 class="text-center popular-dream-title">Most popular dreams</h2>
  <div class="row justify-content-center">
    <% @dreams.each do |dream| %>
      <div class="card m-2" style="width: 22rem;">
        <div class="card-img-top"><%= cl_image_tag dream.photo.key, width: "100%" %></div>
        <div class="card-body">
          <h4 class="card-title"><%= dream.name %></h4>
          <div class="card-text">
            <p>Â£ <%= dream.price %></p>
            <p><%= dream.description %></p>
            <p><%= dream.duration %> hours</p>
          </div>
        </div>
        <%= link_to 'View Details', dream_path(dream), class: "btn btn-light" %>
      </div>
    <% end %>
  </div>
</div>

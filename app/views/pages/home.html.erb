<div>
  <div class="header">
    <h2>Where your dreams come true</h2>
  </div>

  <div class="home-searchbar">
    <%= form_tag dreams_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control rounded",
        placeholder: "Find a dream"
      %>
      <%= submit_tag "Search", class: "btn btn-primary search-button" %>
    <% end %>
  </div>
</div>

<div class="container">
<h2>Most popular dreams</h2>
  <div class="row justify-content-center">
    <div class="col-6">
      <% @dreams.each do |dream| %>
        <div class="card">
          <p>
            <%= dream.name %>
          </p>
          <%= cl_image_tag dream.photo.key, height: 400, width: 534, crop: :fill %>
          <p>
            <%= dream.description %>
          </p>
          <p>
           Â£ <%= dream.price %>
          </p>
          <p>
            <%= dream.duration %> hours
          </p>
          <%= link_to 'View Details', dream_path(dream) %>
        </div>
      <% end %>
    </div>
  </div>
</div>

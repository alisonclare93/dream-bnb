<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a
      class="nav-link active"
      id="bookings-tab"
      data-toggle="tab"
      href="#bookings"
      role="tab"
      aria-controls="bookings"
      aria-selected="true"
      >My Bookings</a
    >
  </li>
  <li class="nav-item" role="presentation">
    <a
      class="nav-link"
      id="dreams-tab"
      data-toggle="tab"
      href="#dreams"
      role="tab"
      aria-controls="dreams"
      aria-selected="false"
      >My Dreams</a
    >
  </li>
  <li class="nav-item" role="presentation">
    <a
      class="nav-link"
      id="messages-tab"
      data-toggle="tab"
      href="#messages"
      role="tab"
      aria-controls="messages"
      aria-selected="false"
      >My Messages</a
    >
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div
    class="tab-pane fade show active"
    id="bookings"
    role="tabpanel"
    aria-labelledby="bookings-tab"
  >
    <% @bookings.each do |booking| %>
    <a
      href="<%= dream_path(booking.dream_id) %>"
      class="my-bookings-div-link"
      style="color: black"
    >
      <div class="card my-bookings-card my-3">
        <div class="row no-gutters">
          <div class="col-sm-3">
            <%= cl_image_tag booking.dream.photo.key, class: 'card-img' %>
          </div>
          <div class="col-sm-7">
            <div class="card-body">
              <h3 class="card-title"><%= booking.dream.name %></h3>
              <p class="card-text">
                <%= booking.dream.description %>
              <div class="card-info">
                £<%= booking.dream.price %>
                <%= booking.dream.duration %> hours
              </div>
              </p>
            </div>
          </div>
          <div class="col-sm-2">
            <%# img here %>
          </div>
        </div>
      </div>
    </a>
    <% end %>
  </div>

  <div
    class="tab-pane fade"
    id="dreams"
    role="tabpanel"
    aria-labelledby="dreams-tab"
  >
    <% @dreams.each do |dream| %>
    <a
      href="<%= dream_path(dream) %>"
      class="my-bookings-div-link"
      style="color: black"
    >
      <div class="card my-bookings-card my-3">
        <div class="row no-gutters">
          <div class="col-sm-3">
            <%= cl_image_tag dream.photo.key, class: 'card-img' %>
          </div>
          <div class="col-sm-7">
            <div class="card-body">
              <h3 class="card-title"><%= dream.name %></h3>
              <p class="card-text">
                <%= dream.description %>
              <div class="card-info">
                £<%= dream.price %>
                <%= dream.duration %> hours
              </div>
              </p>
            </div>
          </div>
          <div class="col-sm-2">
          <%# img here %>
          </div>
        </div>
      </div>
    </a>
    <% end %>
  </div>

  <div
    class="tab-pane fade"
    id="messages"
    role="tabpanel"
    aria-labelledby="messages-tab"
  ></div>
</div>

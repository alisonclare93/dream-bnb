<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a
      class="nav-link active"
      id="bookings-tab"
      data-toggle="tab"
      href="#bookings"
      role="tab"
      aria-controls="bookings"
      aria-selected="true"
      >My Bookings</a
    >
  </li>
  <li class="nav-item" role="presentation">
    <a
      class="nav-link"
      id="dreams-tab"
      data-toggle="tab"
      href="#dreams"
      role="tab"
      aria-controls="dreams"
      aria-selected="false"
      >My Dreams</a
    >
  </li>
  <li class="nav-item" role="presentation">
    <a
      class="nav-link"
      id="messages-tab"
      data-toggle="tab"
      href="#messages"
      role="tab"
      aria-controls="messages"
      aria-selected="false"
      >My Messages</a
    >
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div
    class="tab-pane fade show active"
    id="bookings"
    role="tabpanel"
    aria-labelledby="bookings-tab"
  >
    <%= render :partial => 'shared/bookings_cards' %>
  </div>

  <div
    class="tab-pane fade"
    id="dreams"
    role="tabpanel"
    aria-labelledby="dreams-tab"
  >
    <%= render :partial => 'shared/dreams_cards' %>

  </div>

  <div
    class="tab-pane fade"
    id="messages"
    role="tabpanel"
    aria-labelledby="messages-tab"
  ></div>
</div>

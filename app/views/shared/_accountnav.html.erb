<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">My Bookings</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="false">My Dreams</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">My Messages</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <% @bookings.each do |booking| %>
      <div class="card">
        <div class="row no-gutters">
          <div class="col-sm-3"><%= cl_image_tag booking.dream.photo.key, class: 'card-img' %></div>
          <div class="col-sm-7">
          <div class="card-body">
            <h3 class="card-title">
              <%= booking.dream.name %>
            </h3>
            <p class="card-text">
              <%= booking.dream.description %>
              <%= number_to_currency(booking.dream.price, unit: '£') %>
              <%= booking.dream.duration %> hours
            </p>
              <%= link_to 'View Details', dream_path(booking.dream), class: 'btn btn-light' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="tab-pane fade" id="home" role="tabpanel" aria-labelledby="home-tab">
    <% @dreams.each do |dream| %>
      <div class="card">
        <p>
          <%= dream.name %>
        </p>
          <%= cl_image_tag dream.photo.key, height: 400, width: 534, crop: :fill %>
        <p>
          <%= dream.description %>
        </p>
        <p>
        <%= number_to_currency(dream.price, unit: '£') %>
        </p>
        <p>
          <%= dream.duration %> hours
        </p>
        <%= link_to 'View Details', dream_path(dream) %>
      </div>
    <% end %>
  </div>

  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">

  </div>
</div>

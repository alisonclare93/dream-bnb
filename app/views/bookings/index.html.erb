<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <% @my_bookings.each do |booking| %>
        <div class="card">
          <p>
            <%= booking.dream.name %>
          </p>
          <%= cl_image_tag booking.dream.photo.key, height: 300, width: 400, crop: :fill %>
          <p>
            <%= booking.dream.description %>
          </p>
          <p>
          <%= number_to_currency(booking.dream.price, unit: 'Â£') %>
          </p>
          <p>
            <%= booking.dream.duration %> hours
          </p>
          <%= link_to 'View Details', dream_path(booking.dream) %>
        </div>
      <% end %>
    </div>
  </div>
</div>

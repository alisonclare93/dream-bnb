 <div class="search-bar">
  <%= form_tag dreams_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search for a dream"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
<%# TODO do we want buttons for categories which affect the page - need new category column? %>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <% @dreams.each do |dream| %>
        <div class="card">
          <p>
            <%= dream.name %>
          </p>
          <%# <img src="<%= dream.image_url %>" alt=""> %>
          <%# TODO ask Dimitri about image functionality for this page as well. %>
          <p>
            <%= dream.description %>
          </p>
          <p>
           Â£<%= dream.price %>
          </p>
          <p>
            <%= dream.duration %> hours
          </p>
          <%= link_to 'View Details', dream_path(dream) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
